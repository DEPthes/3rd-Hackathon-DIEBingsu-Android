<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/png_slotmachine_back">
        <ImageButton
            android:id="@+id/ib_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_home_btn"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"/>
        <ImageView
            android:layout_width="307dp"
            android:layout_height="224dp"
            android:src="@drawable/png_slotmachine_sign"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-20dp"/>
        <ImageView
            android:id="@+id/iv_bingsu_table"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/png_bingsu_table"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/ib_stick"
            android:layout_width="48dp"
            android:layout_height="76dp"
            android:src="@drawable/ic_slotmachine_stick"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/ll_slotmachine_area"
            app:layout_constraintEnd_toEndOf="@id/ll_slotmachine_area"
            android:layout_marginEnd="20dp"/>
        <LinearLayout
            android:id="@+id/ll_slotmachine_area"
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:background="@drawable/png_slotmachine_area"
            app:layout_constraintTop_toTopOf="@id/iv_bingsu_table"
            app:layout_constraintStart_toStartOf="@id/iv_bingsu_table"
            app:layout_constraintEnd_toEndOf="@id/iv_bingsu_table"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:paddingHorizontal="12dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp">
                <EditText
                    android:id="@+id/iv_slot1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/png_slot"
                    tools:text="가나다라마바사아자차"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    style="@style/gaegu_bold"
                    android:maxLength="10"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="8dp"/>
                <ImageButton
                    android:id="@+id/ib_direct_text1"
                    android:layout_width="48dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_direct_text_btn"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp">
                <EditText
                    android:id="@+id/iv_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/png_slot"
                    tools:text="가나다라마바사아자차"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    style="@style/gaegu_bold"
                    android:maxLength="10"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="8dp"/>
                <ImageButton
                    android:id="@+id/ib_direct_text2"
                    android:layout_width="48dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_direct_text_btn"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/iv_slot3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/png_slot"
                    tools:text="가나다라마바사아자차"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    style="@style/gaegu_bold"
                    android:maxLength="10"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="8dp"/>
                <ImageButton
                    android:id="@+id/ib_direct_text3"
                    android:layout_width="48dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_direct_text_btn"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ib_complete"
            android:layout_width="277dp"
            android:layout_height="62dp"
            android:src="@drawable/ic_complete_btn"
            android:scaleType="fitCenter"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/iv_bingsu_table"
            app:layout_constraintStart_toStartOf="@id/iv_bingsu_table"
            app:layout_constraintEnd_toEndOf="@id/iv_bingsu_table"
            android:layout_marginBottom="28dp"/>
        <ImageView
            android:layout_width="208dp"
            android:layout_height="208dp"
            android:src="@drawable/png_slotmachine_bingsu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>