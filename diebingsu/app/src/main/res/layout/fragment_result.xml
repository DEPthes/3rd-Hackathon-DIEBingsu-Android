<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.main.ResultFragment">

        <ImageView
            android:id="@+id/png_result_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/png_result_backgroud"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/ic_result_title"
            android:layout_width="348dp"
            android:layout_height="136dp"
            android:background="@drawable/ic_result_title"

            android:layout_marginTop="35dp"

            app:layout_constraintTop_toTopOf="@id/png_result_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/photo_img"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_photo_img"
            android:scaleType="fitXY"

            android:layout_marginTop="28.8dp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/ic_result_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_download_btn"

            android:layout_margin="8dp"

            app:layout_constraintEnd_toEndOf="@id/photo_img"
            app:layout_constraintBottom_toBottomOf="@id/photo_img" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="129dp"
            android:layout_height="62dp"
            android:background="@drawable/ic_share_btn"
            app:layout_constraintHorizontal_chainStyle="packed"

            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="0.8"

            app:layout_constraintTop_toBottomOf="@id/photo_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_post"
            app:layout_constraintBottom_toTopOf="@id/btn_restart"/>

        <ImageButton
            android:id="@+id/btn_post"
            android:layout_width="129dp"
            android:layout_height="62dp"
            android:background="@drawable/ic_post_btn"

            app:layout_constraintTop_toTopOf="@id/btn_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_share"/>

        <ImageButton
            android:id="@+id/btn_restart"
            android:layout_width="277.15dp"
            android:layout_height="62.12dp"
            android:background="@drawable/ic_restart_btn"

            android:layout_marginBottom="27.88dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>