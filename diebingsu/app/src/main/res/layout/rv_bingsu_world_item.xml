<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/rv_bingsu_world_img"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_photo_img"
        android:layout_marginTop="46dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빙수 이름"
        style="@style/gaegu_bold"
        android:textSize="36sp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_bingsu_world_img"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_des"
        android:layout_width="275dp"
        android:layout_height="82dp"
        android:background="@drawable/ic_bingsu_name"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/gaegu_bold"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/img_des"
        app:layout_constraintStart_toStartOf="@id/img_des" />



</androidx.constraintlayout.widget.ConstraintLayout>