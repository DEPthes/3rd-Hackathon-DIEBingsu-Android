<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.main.ShareFragment">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="652dp"
            app:behavior_fitToContents="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            >

            <ImageView
                android:id="@+id/share_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/png_share_background"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/share_title"
                android:layout_width="332dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_share_title"

                android:layout_marginTop="48dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/photo_img_share"
                android:layout_width="270dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_photo_img"
                android:scaleType="fitXY"

                android:layout_marginTop="18dp"

                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/share_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/btn_share_kakao"
                android:layout_width="277.15dp"
                android:layout_height="62.12dp"
                android:background="@drawable/ic_share_kakao_btn"

                android:layout_marginTop="16dp"

                app:layout_constraintTop_toBottomOf="@id/photo_img_share"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/btn_share_insta"
                android:layout_width="277.15dp"
                android:layout_height="62.12dp"
                android:background="@drawable/ic_share_insta_btn"

                android:layout_marginTop="17.88dp"

                app:layout_constraintTop_toBottomOf="@id/btn_share_kakao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="129dp"
                android:layout_height="62dp"
                android:background="@drawable/ic_close_btn"

                android:layout_marginBottom="31dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>